<div class="container nopadding">
<div class="row">
	<div class="col-md-12 nopadding" style="top:-10px;">
		<%= image_tag(@user.usercover.url(:large), :class => "img-thumbnail", :style => "width:100%;")%>
		<%= link_to image_tag(@user.useravatar.url(:small)), user_path(@user), :class => "userpin" %>
	</div>
</div>

<div class="row">
	<div class="col-md-4 nopadding">
		<%= render partial: "albums/smallalbum", :locals => {:albumable => @user}%>
	</div>
	<div class="col-md-4 nopadding">
		<%= render partial: "skills/smallskills"%>
	</div>
	<div class="col-md-4 nopadding">
		<%= render partial: "smallinfo"%>
	</div>
</div>
</div>
<br>
<div class="row">
<div class="col-md-12" style="padding-top: 10px;">
<%= render :partial => "feeds", :locals => {:scribbled => @scribbled} %>
</div>
</div>



<%= form_for @user, :html => { :multipart => true } do |f| %>
	<p>
		<%= f.fields_for :usercover do |g|%>
		<%= g.label :usercover %>
		<%= g.file_field :attachment %>
		<%end %>
		<%= f.submit%>
	<p>
		
<%end%>	

<%= link_to "crop", crop_user_path, :id => @user.id, :method=> 'GET'%>


<%= form_for @user, :html => { :multipart => true } do |f| %>
	<p>
		<%= f.fields_for :useravatar do |g|%>
		<%= g.label :useravatar %>
		<%= g.file_field :attachment %>
		<%end %>
		<%= f.submit%>
	<p>
		
<%end%>		
