<div class="col-md-10 nopadding">
<%= form_tag skills_path, method: :get do %>
<div class="form-inline">
		<%= search_field_tag :q, params[:q], placeholder: "Look by name", autocomplete: "off", class: "form-control", :style=>"width:80%;"%> 
		<%= submit_tag "Search", class: "btn btn-success" %>	
</div>					 
  <%end%>
</div>
<div class="col-md-2">
	<div class="center">
	<%= link_to "New Skill", new_skill_path, :class=> "btn btn-success btn-block "%>
	</div>	
</div>

<%if !@skills.nil?%>
<%= render partial: "skill", locals:{skills: @skills}%>
<%= paginate @skills%>
<%end%>