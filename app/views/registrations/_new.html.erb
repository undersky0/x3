<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
 <%= devise_error_messages! %>
 
<%= f.input :email, :required => false, :autofocus => true, :input_html => { class: 'form-control', id: 'email'} %>
 
<% if @user.password_required? %>
<%= f.input :password, :required => true, placeholder: "Password", :input_html => { class: 'form-control', id: 'password'} %> 
<%= f.input :password_confirmation, :required => true, placeholder: "Password Confirmation", :input_html => { class: 'form-control', id: 'password_confirmation'} %>
<% end %>
</br>
<div><%= f.submit "Sign up", class: 'btn btn-info btn-sm' %></div>
<% end %>
<div class="clearfix"></div></br>
<%= render "devise/shared/links" %>